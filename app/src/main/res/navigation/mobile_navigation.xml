<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_cards">

  <fragment
      android:id="@+id/nav_cards"
      android:name="com.javiermtz.colectioncards.presentation.cardscreen.CardsFragment"
      android:label="@string/app_name"
      tools:layout="@layout/fragment_cards">
    <action
        android:id="@+id/nav_cards_to_detail"
        app:destination="@id/nav_detail_card"
        app:popUpTo="@id/nav_user" />
  </fragment>

  <fragment
      android:id="@+id/nav_user"
      android:name="com.javiermtz.colectioncards.presentation.userscreen.UserFragment"
      android:label="@string/menu_home"
      tools:layout="@layout/fragment_user" />

  <fragment
      android:id="@+id/nav_fav"
      android:name="com.javiermtz.colectioncards.presentation.favorites.FavoritesFragment"
      android:label="@string/menu_favorites"
      tools:layout="@layout/fragment_favorites" />

  <fragment
      android:id="@+id/nav_detail_card"
      android:name="com.javiermtz.colectioncards.presentation.detailcard.DetailCardFragment"
      android:label="@string/menu_detail"
      tools:layout="@layout/fragment_detail_card">
    <argument
        android:name="card"
        app:argType="com.javiermtz.colectioncards.domain.models.CardsDTO" />

  </fragment>


</navigation>
