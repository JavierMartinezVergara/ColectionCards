<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".presentation.cardscreen.CardsFragment"
    >

  <androidx.cardview.widget.CardView
      android:id="@+id/cardViewCard"
      android:layout_width="150dp"
      android:layout_height="150dp"
      app:cardCornerRadius="12dp"
      app:cardElevation="12dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >

    <ImageView
        android:id="@+id/imageCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_user"
        />

  </androidx.cardview.widget.CardView>

  <TextView
      android:id="@+id/cardId"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:text="@string/action_settings"
      android:textColor="@color/black"
      android:textSize="24sp"
      android:textStyle="bold"
      android:layout_marginStart="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/cardName"
      app:layout_constraintStart_toEndOf="@+id/cardViewCard"
      app:layout_constraintTop_toTopOf="@+id/cardViewCard"
      />

  <TextView
      android:id="@+id/cardName"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:gravity="center_vertical"
      android:text="@string/action_settings"
      android:textColor="@color/black"
      android:textSize="16sp"
      android:textStyle="normal"
      app:layout_constraintBottom_toBottomOf="@+id/cardViewCard"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/cardId"
      app:layout_constraintTop_toBottomOf="@id/cardId"
      tools:text="Javier"
      />


</androidx.constraintlayout.widget.ConstraintLayout>
